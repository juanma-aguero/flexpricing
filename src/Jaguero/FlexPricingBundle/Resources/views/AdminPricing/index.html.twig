{% extends "FlowcodeDashboardBundle:Default:layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Pricing'}, 'Pricing') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ '%entity% list'|trans({'%entity%': 'Pricing'}, 'Pricing') }}
        </h1>
    </section>
    <section class="content">    
        <div class="box">
            <div class="box-header">
                <div class="box-tools pull-right">                    <a class="btn btn-link btn-sm" href={{ path('admin_pricing_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'Pricing'}, 'Pricing') }}
                    </a>
                            </div>
            </div>
            <div class="box-body">    
            <table class="table table-hover records_list table-condensed">
                <thead>
                    <tr>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Title', 'p.title') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Subtitle', 'p.subtitle') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Price', 'p.price') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Important', 'p.important') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Content', 'p.content') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Action', 'p.action') }}</th>                        <th scope="col">{{ knp_pagination_sortable(paginator, 'Enabled', 'p.enabled') }}</th>                    </tr>
                </thead>
                <tbody>
                    {% for pricing in paginator %}
                        <tr>
                                                             
                                <td><a href="{{ path('admin_pricing_show', {id: pricing.id}) }}">{{ pricing.title }}</a></td>
                                <td>{{ pricing.subtitle }}</td>
                                <td>{{ pricing.price }}</td>
                                <td>{% if pricing.important %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                                <td>{{ pricing.content }}</td>
                                <td>{{ pricing.action }}</td>
                                <td>{% if pricing.enabled %}<i class="fa fa-check-square-o"></i>{% else %}<i class="fa fa-square-o"></i>{% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            {{ knp_pagination_render(paginator) }}
            </div>
        <div class="box-footer">

        </div>
        
    </section>        

{% endblock %}
